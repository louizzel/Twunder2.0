@{
    ViewBag.Title = "Index";
}
<div class="container">
<div class="input-group">
    <span class="input-group-btn">
        <button type="button" id="btnSubmit" class="btn btn-primary">Search</button>
    </span>
    <input type="text" id="strQuery" class="form-control" placeholder="Enter keyword here" autofocus />
</div>

<span class="spinner no-display center"></span>
<br />
<div class="no-content no-display alert alert-danger">No Results found</div>
<div class="error alert alert-danger no-display">Error loading results.</div>
<div>
    <table class="table table-striped table-hover no-display">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Username</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody id="content"></tbody>
    </table>
</div>
    </div>
@section scripts{
    @Scripts.Render("~/get-tweets")
}