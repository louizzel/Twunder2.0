@{
    ViewBag.Title = "Get Tweets";
}

<div class="container">
    <div class="input-group">
        <span class="input-group-btn">
            <button type="button" id="btnSubmit" class="btn btn-primary has-spinner" data-bind="click: getTweets, disabled: !isConnected()"><span class="spinner"><i class="glyphicon glyphicon-refresh"></i></span>Search</button>
        </span>
        <input type="text" id="strQuery" class="form-control" placeholder="Enter keyword here" autofocus data-bind="value: searchTerm"/>
        <span class="input-group-btn" data-bind="visible: tweets().length > 0">
            <button type="button" id="btnExport" class="btn btn-primary" data-bind="click: exportData">Export</button>
            <a id="aExport" class="no-display"></a>
        </span>
    </div>
    <div class="center">
        <span class="spinner center"></span>
    </div>
    <div class="alert alert-info no-display">No Results found</div>
    <div class="alert alert-danger no-display" data-bind="visible: !isConnected()">Network Connection Error</div>
    <div class="clearfix"></div>
    <div data-bind="visible: isConnected">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Date</th>@*<span class="glyphicon glyphicon-chevron-down"></span>*@
                    <th>Name</th>
                    <th>Username</th>
                    <th>Content</th>
                </tr>
            </thead>
            <tbody id="content" data-bind="foreach: tweets">
                @*<tr>
                    <td colspan="4">
                        <div class="btn btn-success btn-block">X New Tweets</div>
                    </td>
                </tr>*@
                <tr>
                    <td data-bind="text: CreatedAt"></td>
                    <td data-bind="text: Name"></td>
                    <td data-bind="text: Username"></td>
                    <td data-bind="html: Content"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/get-tweets2.js"></script>
}